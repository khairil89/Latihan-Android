<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/download">

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->

        <!--android:orientation="horizontal">-->

        <ImageView
            android:id="@+id/logoLajadah"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_l"/>

        <TextView
            android:id="@+id/tulisanLajadah"
            android:layout_below="@id/logoLajadah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TOKO LAJADAH"
            android:layout_marginTop="30dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/item_troli"
            android:onClick="initNextToTroli"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tulisanLajadah"
            android:text="Lihat Troli" />

        <Button
            android:id="@+id/item_barang"
            android:onClick="initNextToList"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Lihat Barang"
            android:layout_below="@id/item_troli"
            android:layout_marginTop="30dp" />

        <!--</LinearLayout>-->


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>