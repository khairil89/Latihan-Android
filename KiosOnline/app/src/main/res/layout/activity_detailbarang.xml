<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailgambarbarang"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo_l" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailnamabarang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:text="Roti Unyil"
            android:textSize="30dp"
            android:textColor="#3499DE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Tipe Barang"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailtipebarang"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Makanan"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Deskripsi"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detaildeskripsibarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Makanan penuh bergizi terbuang dari tepung pilihan aneka rasa dan segar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Status"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailstatusbarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Tersedia"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Rating"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailratingbarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="5 dari 10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Jumlah Stok"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailstokbarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="100 item"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Kategori"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailkategoribarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Roti-rotian / Kue Basah"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Harga"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" : "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detailhargabarang"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Rp 125000,-"
                android:textColor="#3432EA"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#202020"
            android:textColor="#FEFEFE"
            android:text="Kembali"
            android:onClick="backToList"/>

    </LinearLayout>

</LinearLayout>
